<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".driverApp.DriverCallingActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="180"
            android:src="@drawable/ic_arrow_up"
            app:tint="@color/white" />
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/unisafe_logo"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialCardView24" />
    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/w_lt"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView24" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView25"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/chronometer2"
        app:layout_constraintStart_toStartOf="@+id/chronometer2"
        app:layout_constraintTop_toBottomOf="@+id/chronometer2"
        app:strokeColor="@color/mapboxNotificationBlue"
        app:strokeWidth="2dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/light"
            app:cardCornerRadius="45dp">
            <TextView
                android:id="@+id/studentCalledInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/w_bk"
                android:layout_gravity="center"/>


        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/w_bk"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView25"
        app:layout_constraintStart_toStartOf="@+id/materialCardView25"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView25" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hangUpCall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/red_red"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:rotation="138"
            android:src="@drawable/ic_call" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView28"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/hangUpCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentName"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_pause_24" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView43"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/materialCardView28"
        app:layout_constraintTop_toTopOf="@+id/materialCardView28"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_volume_up_24" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView42"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView28"
        app:layout_constraintEnd_toStartOf="@+id/materialCardView28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialCardView28"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_mic_off_24" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/w_lt"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView28"
        app:layout_constraintStart_toStartOf="@+id/materialCardView28"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mute"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/w_lt"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView42"
        app:layout_constraintStart_toStartOf="@+id/materialCardView42"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Speaker"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/w_lt"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView43"
        app:layout_constraintStart_toStartOf="@+id/materialCardView43"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView43" />

</androidx.constraintlayout.widget.ConstraintLayout>